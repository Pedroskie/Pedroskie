{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://unityfund.example.com/schemas/verilink/manifest/v2",
  "title": "VeriLink Manifest Schema v2",
  "type": "object",
  "required": [
    "schema_version",
    "generated_at",
    "records",
    "manifest_digest"
  ],
  "properties": {
    "schema_version": {
      "const": 2,
      "description": "Manifest schema version"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp in RFC 3339 format when manifest was generated"
    },
    "records": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/record"
      }
    },
    "records_metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Optional metadata copied from the records input"
    },
    "manifest_digest": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$",
      "description": "SHA-256 digest of the manifest payload"
    },
    "previous_manifest_digest": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$",
      "description": "Digest of the previous manifest in the chain"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "record": {
      "type": "object",
      "required": [
        "record_id",
        "source",
        "sha256"
      ],
      "properties": {
        "record_id": {
          "type": "string",
          "minLength": 1
        },
        "source": {
          "type": "object",
          "required": [
            "type",
            "uri"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "flow-ledger",
                "ots-proof",
                "artifact"
              ]
            },
            "uri": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": true
        },
        "sha256": {
          "type": "string",
          "pattern": "^[0-9a-f]{64}$"
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  }
}
